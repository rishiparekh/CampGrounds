<%- include("../partials/header")  %>


    
        <div class="container">
            
            <div class="row">
                <% camps.forEach(function(camp){ %>
                <div class="col-sm-4">
                    
                    <div class="card text-white bg-secondary mt-3 mb-3" style="max-width: 18rem;">
                        <img src="<%= camp.image%>" class="card-img-top">
                        <div class="card-body">
                            <div class="text-center">
                                <h5 class="card-title"><%= camp.name %></h5>
                                <a class="btn btn-success mb-0" href="/campgrounds/<%=camp._id%>">More Info</a>

                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            
            </div>
        
        </div>
            

        
                
        
    
