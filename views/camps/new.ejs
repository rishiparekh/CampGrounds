<%- include("../partials/header")  %>
<style>
        .wrapper{
                margin-top: 50px;
                border: solid black 1px;
                background-color: aquamarine;
                border-radius: 5%;

        }
        .form-custom{
                padding: 5%;
                font-weight: bolder;
        }
</style>
        
<div class="container col-sm-6">
        <div class="wrapper">
                <form class="form-custom" action="/campgrounds" method="POST">
                        <div class="form-group">
                               <label>Name :</label>
                                <input type="text" class="form-control" name="camp[name]" placeholder="Name of Camp Site">
                        </div>
                        <div class="form-group">
                                <label>Description :</label>
                                <textarea class="form-control" name="camp[description]"></textarea>
                        </div>
                        <div class="form-group">
                                <label>Image :</label>
                                <input type="text" name="camp[image]" placeholder="IMG URL">
                        </div>
                        <button type="submit" class="btn btn-outline-dark">Create</button>         
                </form>
        </div>
            
</div>


<%- include("../partials/footer")  %>
